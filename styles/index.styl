@import "nib/reset"

global-reset()
reset-html5()

html, body
	height 100%

html
	font-size 14px
	font-family "Open Sans", sans-serif

	@media all and (min-width 1900px)
		font-size 16px

h1, h2, h3, h4, h5, h6
	margin 0
	padding 0.2rem
	font-weight bold

for $i in 1..6
	h{$i}
		font-size (2 - 0.2 * $i)rem

p
	margin 0
	padding 0.4rem

a
	color #49401B

	&:hover
		color lighten(@color, 20%)

	&:active
		color lighten(@color, 30%)

	img
		border 0

.b-index-wrapper
	display flex
	min-height 100%
	justify-content center
	align-items center

	&__el
		&_align_center
			text-align center

.b-index-logo
	width 12rem

.b-index-title
	margin-top 1rem
	color #B7AE98

	h1, h2
		font-weight normal

	h1
		color darken(@color, 50%)
		font-size 3rem

	h2
		font-size 0.8rem

.b-nav
	margin 2rem 0
	list-style none

	li + li
		margin-left 1rem

	li
		display inline-block

	a
		display block
		padding 0.2rem

.b-install
	display inline-block
	margin 2rem 0
	padding 1rem
	border-radius 0.5rem
	background-color #E5D3AE
	box-shadow 0.1rem 0.2rem darken(@background-color, 50%)
	text-decoration none

	&:hover
		background-color lighten(@background-color, 15%)

	&:active
		box-shadow none
		transform translate(2px, 2px)

.b-header
	display flex
	justify-content space-between
	align-items center
	padding 1em 5em
	border-bottom 2px #E5D3AE solid

	&__logo
		width 4rem
