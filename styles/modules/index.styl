@import "./base"

.b-index-background
	$background = \
		linear-gradient(-45deg, transparent 52%, rgba(#FFF, 0.9) 54%, transparent 55%),
		linear-gradient(45deg, transparent 52%, rgba(#FFF,0.6) 54%, transparent 55%),
		linear-gradient(-45deg, transparent 50%, rgba(#000, 0.1) 52%, transparent 53%),
		linear-gradient(45deg, transparent 50%, rgba(#000, 0.05) 52%, transparent 53%)

	background $background
	background-size 2rem 2rem

.b-index-wrapper
	display flex
	min-height 100%
	justify-content center
	align-items center

	background radial-gradient(
		ellipse farthest-corner at right bottom,
		rgba(#FFF, 0.3) 0,
		rgba(#FFF, 0.8) 50%,
		rgba(#FFF, 0.2) 100%
	)

	&__el
		&_align_center
			text-align center

$logoColor = #490F25
$logoFamily = "Open Sans Condensed", Arial, Helvetica, sans-serif

.b-index-title
	margin-top 1rem
	color #635a45

	h1, h2
		font-weight normal

	h1
		color $logoColor
		font 700 3.4rem\/2.5rem $logoFamily

	h2
		font-size 0.8rem

.b-index-logo
	width 12rem

.b-install
	display inline-block
	margin 2rem 0
	padding 1rem
	border-radius 0.5rem
	background-color #E5D3AE
	box-shadow 0.1rem 0.2rem darken(@background-color, 50%)
	text-decoration none

	&:hover
		background-color lighten(@background-color, 15%)

	&:active
		box-shadow none
		transform translate(2px, 2px)

.b-nav
	menu
		margin 2rem 0
		list-style none

	li + li
		margin-left 1rem

	li
		display inline-block

	a
		display block
		padding 0.2rem

	strong
		color $activeLinkColor
