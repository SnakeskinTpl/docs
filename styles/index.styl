@import "nib/reset"

global-reset()
reset-html5()

html, body
	height 100%

html
	font-size 14px
	font-family "Open Sans", sans-serif

	@media all and (min-width 1900px)
		font-size 16px

$defaultBackground = \
	linear-gradient(-45deg, transparent 52%, rgba(#FFF, 0.9) 54%, transparent 55%),
	linear-gradient(45deg, transparent 52%, rgba(#FFF,0.6) 54%, transparent 55%),
	linear-gradient(-45deg, transparent 50%, rgba(#000, 0.1) 52%, transparent 53%),
	linear-gradient(45deg, transparent 50%, rgba(#000, 0.05) 52%, transparent 53%)

body
	background $defaultBackground
	background-size 2rem 2rem
	line-height 1.8

h1, h2, h3, h4, h5, h6
	margin 0
	padding 0.2rem
	font-weight bold

for $i in 1..6
	h{$i}
		position relative
		margin (0.15 * (6 - $i))rem 0
		font-size (2 - 0.2 * $i)rem

p
	margin 0
	padding 0.4rem

$linkColor = #49401B
$activeLinkColor = #B31533

a
	color $linkColor

	&:hover
		color $activeLinkColor

	&:active
		color lighten($activeLinkColor, 20%)

	img
		border 0

.b-background
	background radial-gradient(
		ellipse farthest-corner at right bottom,
		rgba(#FFF, 0.4) 0,
		rgba(#EEE, 0.3) 50%,
		rgba(#FFF, 0.6) 100%
	)

.b-index-wrapper
	display flex
	min-height 100%
	justify-content center
	align-items center

	&__el
		&_align_center
			text-align center

.b-doc-wrapper
	min-height 100%

.b-index-logo
	width 12rem

.b-index-title
	margin-top 1rem
	color #635a45

	h1, h2
		font-weight normal

	h1
		font-size 3rem

	h2
		font-size 0.8rem

.b-nav
	menu
		margin 2rem 0
		list-style none

	li + li
		margin-left 1rem

	li
		display inline-block

	a
		display block
		padding 0.2rem

.b-install
	display inline-block
	margin 2rem 0
	padding 1rem
	border-radius 0.5rem
	background-color #E5D3AE
	box-shadow 0.1rem 0.2rem darken(@background-color, 50%)
	text-decoration none

	&:hover
		background-color lighten(@background-color, 15%)

	&:active
		box-shadow none
		transform translate(2px, 2px)

$border = 1px rgba(#B2A842, 0.7) solid

.b-header
	display flex
	justify-content space-between
	align-items center
	padding 1rem 5rem
	border-bottom $border
	background $defaultBackground
	background-color #FFF
	background-size 0.4rem 0.4rem

	&__logo
		width 4rem

.b-content-wrapper
	display flex
	align-content flex-start
	box-sizing border-box
	width 100%

.b-contents
	position relative
	align-self flex-start
	box-sizing border-box
	border-right $border

	padding 0.5rem
	padding-bottom 16px

	background radial-gradient(
		ellipse farthest-corner at right bottom,
		#F4EF77 0,
		#F2E66B 50%,
		#EAD949 100%
	)

	&::after
		$height = 14px
		$background = \
			linear-gradient(135deg, #F3EC74 25%, transparent 25%),
			linear-gradient(225deg, #F3EC74 25%, transparent 25%),
			linear-gradient(315deg, white 25%, transparent 25%) -7px 0,
			linear-gradient(45deg, white 25%, transparent 25%) -7px 0

		position absolute
		right 0
		bottom -4px
		left 0
		height $height
		content ""

		background $background
		background-color #EAD949
		background-size $height $height

	li > ul
		margin-left 0.5rem

.b-articles
	color #000
	flex-basis 100%
	display flex
	justify-content center

.b-article
	display none
	padding 0.5rem
	max-width 50rem

	&_active_true
		display block

	p
		text-indent 0.5rem

	h1
		margin 1.8rem 0 2.2rem 0
		font 700 2.4rem\/1.5rem "Open Sans Condensed", Arial, Helvetica, sans-serif

	for $i in 2..6
		h{$i}
			cursor pointer
			$hoverColor = #222

			&:hover
				opacity 0.7
				color $hoverColor
				text-decoration underline

			&:active
				color lighten($hoverColor, 30%)

			&:hover::before
				position absolute
				left -1em
				display inline-block
				content "\f0c1"
				font-weight normal
				font-family FontAwesome
				color lighten($hoverColor, 50%)

$codeMargin = 0.4rem 0

.hljs
	margin $codeMargin

.b-example
	position relative
	margin $codeMargin

	&__toggle
		display block
		list-style-type none
		text-align right

	&__link
		display inline-block
		padding 0.2em 0.6em
		font-size 0.9rem
		cursor default

		&_active_true
			background #F0F0F0
			color $activeLinkColor

		&:not(&_active_true)
			border-bottom 1px dotted $linkColor
			color $linkColor
			cursor pointer

			&:hover
				color lighten(@color, 20%)

			&:active
				color lighten(@color, 30%)

	&__code
		> .hljs
			display none
			margin 0

			&:first-of-type
				display block
